            getchar(); getchar();
            system("cls");
        }
        break;
      case '3':
          {
              system("cls");
          cout<<"Autorem tej wspaniaÅ‚ej gry jest Maciej Grzegrzolka, bez niczyjej pomocy kurcze"<<endl;
          cout<<"A teraz nacisnij enter zeby wrocic do menu";
          getchar(); getchar();
            system("cls");
          }
          break;
      case '4': cout<<"Zegnaj"; Sleep(3000); exit(0); break;
      default:
        {
        cout<<"Nie ma takiego wyboru"<<endl;
