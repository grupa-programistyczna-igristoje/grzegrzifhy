    cout<<"            *HP: 500              "<<endl;
    cout<<"          *ATAK: 10-20            "<<endl;
    cout<<"       SZANSA NA BLOK - 20%       "<<endl;
    cout<<"*OBRAZENIA ZADAWANE PODCZAS BLOKU "<<endl;
    cout<<"               5-10               "<<endl;
