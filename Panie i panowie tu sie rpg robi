    cout<<"STATYSTYKI BEDA WYSWIETLANE CALY CZAS NA EKRANIE"<<endl;
    cout<<"STAN GRY ZOSTAL ZAPISANY"<<endl;
    cout<<"WCISNIJ ENTER ABY ZACZAC GRE";
    getchar();
    system("cls");
    prolog_roland();
    }
    else if (zapis1=="N")
    {
    system("cls");
    cout<<"AKT 0: POKAZ POSTACI"<<endl;
